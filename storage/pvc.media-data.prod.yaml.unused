apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  labels:
    app: servarr
    environment: prod
    type: nfs
  name: prod-media-data
  namespace: servarr
spec:
  accessModes:
  - ReadWriteMany
  resources:
    requests:
      storage: 2Ti
  selector:
    matchLabels:
      app: servarr
      environment: prod
      type: nfs
  storageClassName: ''
  volumeMode: Filesystem
